    <!-- 根据查询到的数量判断是否达到下个等级 -->
    <select id="getCoonShopNextLevel" resultType="int">
        select count(*) from coon_shop s 
        inner join coon_shop_level l on s.level=l.id where s.id = #{id,jdbcType=VARCHAR} 
        	and s.turnover_orders <![CDATA[>]]> l.order_max
