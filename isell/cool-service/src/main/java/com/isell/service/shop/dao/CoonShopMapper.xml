    <update id="updateCoonShopLevel">
    	update coon_shop s 
    	set s.level=(select l.id from coon_shop_level l where l.order_min<![CDATA[<=]]>s.turnover_orders and l.order_max<![CDATA[>=]]>s.turnover_orders)  
